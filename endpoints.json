  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["topic", "sort_by", "order"],
    "requestFormat": {
      "path": [
        "/api/articles",
        "/api/articles?topic=mitch",
        "/api/articles?sort_by=date",
        "/api/articles??order=desc"
      ],
      "sort_by": [
        "article_id",
        "title",
        "topic",
        "author",
        "body",
        "created_at",
        "date",
        "votes",
        "article_img_url"
      ],
      "order": ["asc", "desc"]
    },
    "exampleResponse": {
      "articles": [
        {
          "article_id": 1,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
